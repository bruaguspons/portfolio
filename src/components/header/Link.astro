---
interface Props {
    href: string;
}

const { href } = Astro.props;

const { url } = Astro.request;

let defaultColor = "text-white";

if (url.includes(href)) {
    // defaultColor = "from-purple-500 to-blue-500";
    defaultColor = "text-transparent";
}
---

<a
    href={href}
    class={`font-extrabold ${defaultColor} bg-clip-text bg-gradient-to-r  from-purple-500 to-blue-500 hover:from-purple-500 hover:to-blue-500 hover:text-transparent transition duration-150`}
>
    <slot />
</a>
