---
interface Props {
    href: string;
    className?: string;
}

const { href, className } = Astro.props;

const { url } = Astro.request;

const isCurrentLink = url.includes(href);

const defaultColor = isCurrentLink
    ? "text-transparent"
    : "text-neutral-700 dark:text-neutral-300";
const hoverBg = isCurrentLink ? "" : "hover:bg-background-500 cursor-pointer ";
---

{
    isCurrentLink ? (
        <div
            class={`w-full h-full sm:max-w-min ${hoverBg} sm:hover:bg-transparent`}
        >
            <span
                class={`font-bold ${defaultColor} bg-clip-text bg-gradient-to-r  from-purple-500 to-red-400 dark:to-blue-500 hover:from-purple-500 hover:to-red-400 dark:hover:to-blue-500 hover:text-transparent dark:hover:text-transparent transition duration-150

                w-full h-full flex justify-center items-center sm:w-auto
                
                `}
            >
                <slot />
            </span>
        </div>
    ) : (
        <div
            class={`w-full h-full sm:max-w-min ${hoverBg} sm:hover:bg-transparent`}
        >
            <a
                href={href}
                class={`font-bold ${defaultColor} bg-clip-text bg-gradient-to-r  from-purple-500 to-red-400 dark:to-blue-500 hover:from-purple-500 hover:to-red-400 dark:hover:to-blue-500 hover:text-transparent dark:hover:text-transparent transition duration-150 ${className}
                
                w-full h-full flex justify-center items-center sm:w-auto
                `}
            >
                <slot />
            </a>
        </div>
    )
}
