---
interface Props {
    effectEnable?: boolean;
}

const { effectEnable = true } = Astro.props;
---

<div class="w-60 h-96 group [perspective:800px]">
    <div
        class={`card ${
            effectEnable && "group-hover:[transform:rotateY(180deg)]"
        } h-full w-full relative transition-transform duration-1000 [transform-style:preserve-3d]`}
    >
        <div
            class="w-full h-full rounded-3xl absolute [backface-visibility:hidden] overflow-hidden"
        >
            <slot name="front" />
        </div>
        <div
            class="flex flex-col items-center justify-center gap-5 w-full h-full rounded-3xl absolute [backface-visibility:hidden] [transform:rotateY(180deg)] bg-background-400"
        >
            <slot name="back" />
        </div>
    </div>
</div>
