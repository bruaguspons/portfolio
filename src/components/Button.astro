---
interface Props {
    href?: string;
    target?: string;
    className?: string;
    type?: "submit" | "reset" | "button" | null | undefined;
}

const { href, target, className, type } = Astro.props;
---

{
    href ? (
        <a
            href={href}
            target={target}
            class={`button-hover relative inline-flex items-center justify-center p-0.5 overflow-hidden font-medium text-background-600 rounded-lg group bg-gradient-to-br from-purple-500 to-red-400 dark:to-blue-500 dark:text-neutral-300 focus:outline-none active:from-purple-600 active:to-red-500 dark:active:to-blue-700 transform active:scale-90 transition-transform ${className}`}
        >
            <span class="relative px-5 py-2.5 transition-all ease-in duration-150 bg-background-100 dark:bg-background-600 rounded-md w-max">
                <slot />
            </span>
        </a>
    ) : (
        <button
            class={`button-hover relative inline-flex items-center justify-center p-0.5 overflow-hidden font-medium text-background-600 rounded-lg group bg-gradient-to-br from-purple-500 to-red-400 dark:to-blue-500 dark:text-neutral-300 focus:outline-none active:from-purple-600 active:to-red-500 dark:active:to-blue-700 transform active:scale-90 transition-transform ${className} cursor-default`}
            type={type}
        >
            <span class="relative px-5 py-2.5 transition-all ease-in duration-150 bg-background-100 dark:bg-background-600 rounded-md w-max">
                <slot />
            </span>
        </button>
    )
}

<style is:inline>
    a.button-hover:hover,
    button.button-hover:hover {
        color: #ffffff;
    }

    a.button-hover:hover span,
    button.button-hover:hover span {
        background: transparent;
    }
</style>
