---
import { getI18N } from "@/i18n";
import Carousel from "./carousel/Carousel.astro";
import TextColor from "../TextColor.astro";
// import BorderEffect from "../BorderEffect.astro";
import CardEffect from "../CardEffect.astro";

const { currentLocale } = Astro;

const i18n = getI18N({ currentLocale });
---

<section class="flex flex-col h-full items-center justify-center">
    <div class="flex flex-col max-w-[980px]">
        <p class="font-bold text-3xl mb-4">
            <TextColor>
                {i18n.ABOUT.title[1]}
            </TextColor>
            {i18n.ABOUT.title[2]}
        </p>

        <CardEffect classNameCard="mt-4 after:blur-lg">
            <p class="text-lg">{i18n.ABOUT.content}</p>
        </CardEffect>

        <div>
            <Carousel />
        </div>
    </div>
</section>
