---
interface Props {
    id: string;
    isChecked?: boolean;
    ariaLabel: string;
}

const { id, isChecked = false } = Astro.props;
---

<div class="relative inline-block w-14 h-5">
    <button
        id={id}
        name="switch"
        class={`switch absolute cursor-pointer top-0 left-0 right-0 bottom-0 transition duration-[0.4s] bg-gradient-to-r from-purple-500 to-blue-500 rounded-full 
        
            before:absolute before:h-7 before:w-7 before:left-0 before:-bottom-1 before:bg-background-100 before:transition before:duration-[0.4s] before:rounded-full
            `}
        aria-label="Name"
        data-checked={isChecked ? isChecked.toString() : ""}></button>
</div>

<style>
    button.switch[data-checked="true"]:before {
        -webkit-transform: translateX(30px);
        -ms-transform: translateX(30px);
        transform: translateX(30px);
    }
</style>
