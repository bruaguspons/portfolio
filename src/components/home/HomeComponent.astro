---
import ImageCircule from "@/components/ImageCircle.astro";
import { getI18N } from "@/i18n";
import Button from "../Button.astro";
import TextColor from "../TextColor.astro";

const { currentLocale } = Astro;

const i18n = getI18N({ currentLocale });
---

<section class="flex h-full items-center justify-center">
    <div class="flex max-w-[980px]">
        <div class="">
            <span class="text-lg">
                {i18n.HOME.GREETING}
            </span>
            <p class="text-3xl font-extrabold my-4">
                {i18n.HOME.PROFESSION[1]}
                <TextColor>
                    {i18n.HOME.PROFESSION[2]}
                </TextColor>
                {i18n.HOME.PROFESSION[3]}
            </p>
            <p class="text-zinc-700 dark:text-zinc-300 text-base text-wrap">
                {i18n.HOME.DESCRIPTION}
            </p>

            <div class="mt-10">
                <Button className="mr-2" href="career">
                    {i18n.HOME.CAREER}
                </Button>
                <Button href="projects">{i18n.HOME.PROJECTS}</Button>
            </div>
        </div>
        <div class="mx-10">
            <ImageCircule />
        </div>
    </div>
</section>
