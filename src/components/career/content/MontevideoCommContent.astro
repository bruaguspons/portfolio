---
import TextColor from "@/components/TextColor.astro";
import { getI18N } from "@/i18n";
const { currentLocale } = Astro;

const i18n = getI18N({ currentLocale });
---

<section class="flex h-full w-full items-center justify-center">
    <div
        class="flex flex-col-reverse items-center sm:flex-row w-full sm:max-w-[980px] mx-10"
    >
        <div class="flex flex-1 flex-col items-center sm:items-start">
            <p
                class="flex flex-col lg:flex-row gap-4 lg:items-center text-2xl sm:text-3xl font-extrabold my-4 text-center sm:text-left"
            >
                <TextColor>
                    {i18n.CAREER.ITEMS["1"].TITLE}
                </TextColor>
                <span class="font-semibold text-lg">
                    {i18n.CAREER.ITEMS["1"].DATE}
                </span>
            </p>
            <p class="text-zinc-700 dark:text-zinc-300 text-base text-wrap">
                {i18n.CAREER.ITEMS["1"].CONTENT}
            </p>
        </div>
        <div class="w-60 h-60">
            <img
                class="h-full w-full rounded-xl"
                src="/montevideo-comm.webp"
                alt="Montevideo Comm"
            />
        </div>
    </div>
</section>
