---
import { PosShapesType, ShapesType } from "../types";
import { getRandomOrderShapes } from "../utils";
import Shapes from "./Shapes.astro";

const [randomShape1, randomShape2, randomShape3] = getRandomOrderShapes() as [
    ShapesType,
    ShapesType,
    ShapesType,
];
---

<picture class="w-60 h-60 mb-10 sm:w-72 sm:h-72 relative flex">
    <img
        class="rounded-full object-cover w-full h-full"
        src="/bruno_pons.webp"
        alt="bruno pons"
    />
    <Shapes pos={PosShapesType.NO} shape={randomShape1} />
    <Shapes pos={PosShapesType.NE} shape={randomShape2} />
    <Shapes pos={PosShapesType.SO} shape={randomShape3} />
    <Shapes pos={PosShapesType.SE} />
    <Shapes />
    <Shapes />
</picture>
