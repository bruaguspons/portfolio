---
interface Props {
    classNameCard?: string;
    classNameContent?: string;
    isLink?: boolean;
    href?: string;
}

const { classNameCard, classNameContent, isLink = false, href } = Astro.props;
---

{
    isLink && href ? (
        <a
            href={href}
            class={`relative z-10  
                 before:absolute before:-top-1 before:-left-1 before:-right-1 before:-bottom-1 before:bg-gradient-to-r before:from-purple-500 before:to-red-400 dark:before:to-blue-500 before:-z-10 before:rounded-xl
            
                 after:absolute after:-top-1 after:-left-1 after:-right-1 after:-bottom-1 after:bg-gradient-to-r after:from-purple-500 after:to-red-400 dark:after:to-blue-500 after:-z-10 after:blur-xl after:rounded-xl
            
                 ${classNameCard} group
            `}
        >
            <div
                class={`bg-background-100 dark:bg-background-500 p-8 rounded-lg ${classNameContent} transition-all ease-in-out duration-150
                group-active:bg-transparent sm:group-hover:bg-transparent
                `}
            >
                <slot />
            </div>
        </a>
    ) : (
        <div
            class={`bg-background-100/20 p-8 rounded-lg ${classNameContent} transition-all ease-in-out duration-150 border-4 `}
        >
            <slot />
        </div>
    )
}
