---
import CloseSocialMediaPanel from "./CloseSocialMediaPanel.astro";
import GithubIcon from "@/icons/GithubIcon.astro";
import LinkedinIcon from "@/icons/LinkedinIcon.astro";
import MailIcon from "@/icons/MailIcon.astro";
---

<div
    id="socialMediaPanel"
    style="display: none;"
    class="hide-panel fixed h-full w-full sm:w-48 bg-background-400 right-0 z-50"
>
    <CloseSocialMediaPanel />
    <div class="flex flex-col h-full w-full justify-evenly items-center">
        <a
            href="https://github.com/bruaguspons"
            target="_blank"
            class="flex flex-col items-center w-32 group bg-clip-text bg-gradient-to-r hover:from-purple-500 hover:to-red-400 dark:hover:to-blue-500 hover:text-transparent dark:hover:text-transparent"
        >
            <GithubIcon from_color="#A855F6" to_color="#3b82f6" />
            <span class="text-3xl sm:text-xl">Github</span>
        </a>
        <a
            href="https://www.linkedin.com/in/bruno-pons-7b1547252/"
            target="_blank"
            class="flex flex-col items-center w-32 group bg-clip-text bg-gradient-to-r hover:from-purple-500 hover:to-red-400 dark:hover:to-blue-500 hover:text-transparent dark:hover:text-transparent"
        >
            <LinkedinIcon from_color="#A855F6" to_color="#3b82f6" />
            <span
                class="text-3xl sm:text-xl bg-clip-text bg-gradient-to-r hover:from-purple-500 hover:to-red-400 dark:hover:to-blue-500 hover:text-transparent dark:hover:text-transparent"
                >Linkedin</span
            >
        </a>
        <a
            href="mailto:bruaguspons@gmail.com"
            target="_blank"
            class="flex flex-col items-center w-32 group bg-clip-text bg-gradient-to-r hover:from-purple-500 hover:to-red-400 dark:hover:to-blue-500 hover:text-transparent dark:hover:text-transparent"
        >
            <MailIcon from_color="#A855F6" to_color="#3b82f6" />
            <span class="text-3xl sm:text-xl">Mail</span>
        </a>
    </div>
</div>

<style>
    .show-panel {
        animation: Show 0.3s ease-in-out forwards;
    }
    .hide-panel {
        animation: Hide 0.3s ease-in-out forwards;
    }

    @keyframes Hide {
        0% {
            transform: translateX(0);
        }

        100% {
            transform: translateX(100%);
        }
    }

    @keyframes Show {
        0% {
            transform: translateX(100%);
        }

        100% {
            transform: translateX(0);
        }
    }
</style>
